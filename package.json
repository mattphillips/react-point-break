      "git add"
    ]
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "babel": {
    "plugins": [
      "babel-jest-assertions",
      "gwt"
    ]
